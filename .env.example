# eTrade credentials (for local scraper)
ETRADE_USERNAME=your_username
ETRADE_PASSWORD=your_password

# Database configuration
# For local development with SQLite (leave DATABASE_URL empty):
DB_PATH=./data/transactions.db

# For production with PostgreSQL (set DATABASE_URL):
# DATABASE_URL=postgresql://user:password@host:port/database
# or use Vercel's auto-generated variables:
# POSTGRES_URL=postgresql://...

# Flask settings
FLASK_PORT=5000
FLASK_DEBUG=False
FLASK_SECRET_KEY=generate-a-secure-random-key-for-production

# Clerk authentication (for production)
# Get these from your Clerk dashboard: https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_JWKS_URL=https://your-app.clerk.accounts.dev/.well-known/jwks.json

# Scraper settings (for local development)
HEADLESS=True
SCRAPER_TIMEOUT=60000
DOWNLOAD_DIR=./data/downloads
